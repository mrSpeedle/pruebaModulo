<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-4"> <!-- Ajusta el ancho del formulario -->
    <h2 class="text-center">Iniciar Sesión</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "text-center" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control custom-input" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control custom-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
  <div class="mb-3 form-check d-flex justify-content-end"> <!-- Flexbox para alinear a la derecha -->
    <%= f.check_box :remember_me, class: "form-check-input me-2" %> <!-- Espacio entre checkbox y etiqueta -->
    <%= f.label :remember_me, class: "form-check-label" %>
  </div>
<% end %>

      <div class="actions text-center">
        <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>