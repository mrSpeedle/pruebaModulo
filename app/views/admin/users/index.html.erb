<div class="container my-5">
  <h1 class="text-center mb-4">Usuarios</h1>
  
  <div class="text-center mb-4">
    <%= link_to 'Nuevo Usuario', new_admin_user_path, class: 'btn btn-success' %>
  </div>
  
  <div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
      <thead class="thead-dark">
        <tr>
          <th>Email</th>
          <th>Rol</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <%= link_to 'Editar', edit_admin_user_path(user), class: 'btn btn-warning btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
