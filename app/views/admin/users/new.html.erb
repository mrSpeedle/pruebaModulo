<h1>Nuevo Usuario</h1>

<%= form_with(model: @user, url: admin_users_path) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %> 
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.label :role %>
    <%= form.select :role, User.roles.keys.map { |role| [role.humanize.capitalize, role] } %>
  </div>

  <div>
    <%= form.label :foto_perfil %>
    <%= form.file_field :foto_perfil %>
  </div>

  <div>
    <%= form.label :cv %>
    <%= form.file_field :cv %>
  </div>

  <div>
    <%= form.submit 'Crear Usuario' %>
  </div>
<% end %>