<div class="container my-5">
  <h1 class="text-center mb-4">Ofertas Laborales</h1>

  <div class="row">
    <% @ofertas_laborales.each do |oferta| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= oferta.titulo %></h5>
            <p class="card-text"><%= truncate(oferta.descripcion, length: 100) %></p>
            <p class="card-text"><strong>Empresa:</strong> <%= oferta.empresa %></p>
            <%= link_to 'Ver Detalles', oferta, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'Crear Nueva Oferta', new_oferta_laboral_path, class: 'btn btn-success' if current_user.admin? %>
  </div>
</div>