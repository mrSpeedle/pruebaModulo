<div class="container my-5">
  <h1 class="text-center mb-4">Ofertas Laborales</h1>

  <!-- Botón para crear nueva oferta -->
  <div class="text-center mt-4">
    <% if current_user.admin? %>
      <%= link_to 'Crear Nueva Oferta', new_ofertas_laborale_path, class: 'btn btn-success btn-sm' %>
    <% end %>
  </div>

  <!-- Paginación -->
  <div class="text-center my-4">
    <%= paginate @ofertas_laborales %>
  </div>

<!-- Contenedor de tarjetas -->
  <div class="row">
    <% @ofertas_laborales.each do |oferta| %>
      <div class="col-md-12 mb-4">
        <div class="card shadow-sm">
          <div class="card-body d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title mb-1"><%= oferta.titulo %></h5>
              <p class="card-text">
                <i class="fas fa-building"></i> <!-- Ícono de empresa -->
                <%= oferta.empresa %>
              </p>
              <p class="card-text">
                <i class="fas fa-phone"></i> <!-- Ícono de número -->
                <%= oferta.numero_contacto %>
              </p>
              <p class="card-text">
                <i class="fas fa-envelope"></i> <!-- Ícono de correo -->
                <%= oferta.correo_contacto %>
              </p>
            </div>
            <div>
              <small class="text-muted"><%= oferta.created_at.strftime("%d/%m/%Y") %></small>
            </div>
          </div>
          <div class="card-footer text-right">
            <%= link_to 'Ver Detalles', ofertas_laborale_path(oferta), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
