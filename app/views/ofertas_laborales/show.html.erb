<div class="container my-5">
  <div class="card text-center">
    <div class="card-header">
      <h1><%= @oferta_laboral.titulo %></h1>
    </div>
    <div class="card-body">
      <p>
        <i class="fas fa-building"></i> <!-- Ícono de empresa -->
        <strong>Empresa:</strong> <%= @oferta_laboral.empresa %>
      </p>
      <p>
        <i class="fas fa-envelope"></i> <!-- Ícono de correo -->
        <strong>Correo Electrónico:</strong> <%= @oferta_laboral.correo_contacto %>
      </p>
      <p>
        <i class="fas fa-phone"></i> <!-- Ícono de número -->
        <strong>Número de Contacto:</strong> <%= @oferta_laboral.numero_contacto %>
      </p>
      <p class="mt-4" style="min-height: 100px;"> <!-- Espacio designado para la descripción -->
        <%= @oferta_laboral.descripcion %>
      </p>
      <% if current_user.admin? %>
        <div class="mt-4">
          <%= link_to 'Editar Oferta', edit_ofertas_laborale_path(@oferta_laboral), class: 'btn btn-warning' %>
          <%= button_to 'Borrar Oferta', ofertas_laborale_path(@oferta_laboral), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar esta oferta?' }, class: 'btn btn-danger' %>
        </div>
      <% elsif current_user.present? %>
        <div class="mt-4">
          <%= button_to 'Postular', ofertas_laborale_postulaciones_path(@oferta_laboral), method: :post, class: 'btn btn-success' %> 
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <div class="text-center">
        <%= link_to 'Volver a Ofertas Laborales', ofertas_laborales_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
